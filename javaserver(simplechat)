import java.io.*;
import java.net.*;
public class Server extends javax.swing.JFrame {
DataInputStream dis;///aune aune bato chaiyonta 
DataOutputStream dos;
Socket client;
ServerSocket server;
     /**
     * Creates new form Server
     */
    public Server() {
        initComponents(); ///drag drop sab code yaha xa
        setVisible(true);
        setTitle("Server");   
      
        
        
        try { 
        server =new ServerSocket(1234);
        history.setText("Waiting for client to connect");
        client=server.accept();
        history.append("\n Connected to Client");
 
        String input;
        int a=1;
        while(a==1)
        {
        dis =new DataInputStream(client.getInputStream());//client bata aako msg server lai janxa
        input= dis.readUTF(); //unicode trasfer function
        history.append("\n Client says: "+input);
        }
        }
        catch (Exception e) {
            history.setText("\n Error"+e);
            }
        
           

       
        }

